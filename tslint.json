{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "prefer-const": false,
    "ordered-imports": false,
    "object-literal-key-quotes": [false, "consistent-as-needed"],
    "no-consecutive-blank-lines": [true, 3],
    "no-empty-interface": false,
    "max-classes-per-file": false,
    "member-ordering": false,
    "max-line-length": false,
    "curly": [true, "ignore-same-line"],
    "no-empty": false,
    "no-string-literal": false,
    "no-var-requires": false,

    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-angle-bracket-type-assertion": false,
    "object-literal-shorthand": [
      true,
      "never"
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "radix": false,
    "no-console": false,
    "no-shadowed-variable": false,
    "array-type": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
